<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SantiagoPanchiExamen"

             x:Class="SantiagoPanchiExamen.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.BindingContext>
        <local:RecargaModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20" Spacing="10">
        <Label x:Name="spanchi_label1" 
               Text="Ingrese su nombre y teléfono" 
               FontSize="20" />

        <Entry x:Name="nameEntry" 
               Placeholder="Nombre Completo" />

        <Entry x:Name="phoneEntry" 
               Placeholder="Número de Teléfono" 
               Keyboard="Telephone" />

        <Button Text="Realizar Recarga" 
                Clicked="OnRecargaButtonClicked" />

        <Label x:Name="spanchi_lastRecargaLabel" 
               Text="{Binding UltimaRecarga}" 
               FontSize="16" 
               IsVisible="True" />
    </StackLayout>
</ContentPage>


